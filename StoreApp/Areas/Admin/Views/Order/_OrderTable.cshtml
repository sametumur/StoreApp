@model IEnumerable<Order>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Adress</th>
        <th>Shipping</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Name</td>
                <td>@order.Email</td>
                <td>@order.Address</td>
                <td>
                    @if (order.Shipped)
                    {
                        <i class="fa-solid fa-truck-fast text-success"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-truck text-warning"></i>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Detail" asp-route-id="@order.Id" data-toggle="tooltip"
                           data-placement="top" title="Detail">
                            <i class="fa-solid fa-search"></i>
                        </a>
                    </div>
                </td>
            </tr>
        } 
    }
    else
    {
        <tr>
            <td colspan="6">
                <div class="text-center">
                    Order is empty
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>