@model IEnumerable<IdentityRole>

<div class="text-center my-3">
    <div class="display-6">Roles</div>
    
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa-solid fa-plus"></i> Create</a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@role.Id" data-toggle="tooltip" data-placement="top" title="Edit">
                            <i class="fa fa-edit"></i> 
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id" data-toggle="tooltip" data-placement="top" title="Delete">
                            <i class="fa fa-trash"></i> 
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>