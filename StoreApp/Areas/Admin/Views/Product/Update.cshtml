@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-area="Admin" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" class="form-control" placeholder="Product Name"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Description">Product Description</label>
        <input asp-for="Description" class="form-control" placeholder="Product Description"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Product Price</label>
        <input asp-for="Price" class="form-control" placeholder="Product Price"/>
    </div>
    <div class="form-check form-switch my-3">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label asp-for="Showcase" class="form-check-label" for="flexSwitchCheckDefault">Show Case</label>
    </div>
    <div class="form-group my-3">
        <label class="form-label">Product Image</label>
        @if (!string.IsNullOrEmpty(Model?.ImageUrl))
        {
            <div>
                <img class="img-thumbnail rounded float-start w-25" src="@Model.ImageUrl" alt="@(Model.Name ?? "Product Image")"/>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <small>Mevcut resim yok</small>
            </div>
        }
        <input class="form-control" type="file" name="file">
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Update
            </button>
            <a asp-action="Index" asp-area="Admin" class="btn btn-outline-primary">
                <i class="fa fa-list"></i> Products
            </a>
        </div>
    </div>
</form>