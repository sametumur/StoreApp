@model ProductDtoForInsertion

<div class="text-center" xmlns="http://www.w3.org/1999/html">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" class="form-control" placeholder="Product Name"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Description">Product Description</label>
        <input asp-for="Description" class="form-control" placeholder="Product Name"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl" class="form-label">Product Image</label>
        <input class="form-control" type="file" name="file">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Product Price</label>
        <input type="number" asp-for="Price" class="form-control" placeholder="Product Price"/>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i> Products
            </a>
        </div>
    </div>

</form>