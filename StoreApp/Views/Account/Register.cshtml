@model RegisterDto

<main class="login-form my-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <i class="fa-solid fa-user-plus"></i> Register
                    </div>
                    <div class="card-body">
                        <div class="text-start">
                            <div class="text-danger" asp-validation-summary="All"></div>
                        </div>
                        <form method="post" asp-action="Register">
                            <div class="form-group row">
                                <label asp-for="UserName" class="col-md-4 col-form-label text-md-right">User Name</label>
                                <div class="col-md-6">
                                    <input type="text"  class="form-control" asp-for="UserName" autofocus>
                                </div>
                            </div>
                            <div class="form-group row my-3">
                                <label asp-for="Email" class="col-md-4 col-form-label text-md-right">Email</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" asp-for="Email">
                                </div>
                            </div>
                            <div class="form-group row my-3">
                                <label asp-for="Password" class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    <input type="password"  class="form-control" asp-for="Password">
                                </div>
                            </div>
                            <div class="col-md-6 my-2 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                     Register
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>