@model LoginViewModel

<main class="login-form my-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <i class="fa-solid fa-right-to-bracket"></i> Login
                    </div>
                    <div class="card-body">
                        <div class="text-start">
                            <div class="text-danger" asp-validation-summary="All"></div>
                        </div>
                        <form method="post" asp-action="Login">
                            <input type="hidden" asp-for="ReturnUrl"/>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-md-4 col-form-label text-md-right">User Name</label>
                                <div class="col-md-6">
                                    <input type="text" id="email_address" class="form-control" asp-for="Name" autofocus>
                                </div>
                            </div>
                            <div class="form-group row my-3">
                                <label asp-for="Password" class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" asp-for="Password">
                                </div>
                            </div>
                            <div class="col-md-6 my-2 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </div>
                        </form>
                        <div class="my-3"> If you don't have an account Please click here to achive <a asp-action="Register"> registration page</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>