@model Product

<div class="row my-4">
    <div class="col-md-12 ">
        <div class="card w-100" >
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Model.Price.ToString("c")</p>
                        <form  id="@Model.Id" asp-page="/cart" method="post">
                            <input type="hidden" name="productId" value="@Model?.Id" />
                            <input type="hidden" name="quantity" value=1 />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.GetBaseUrl()" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-cart-plus"></i>
                                Add To Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

