@model ProductListViewModel 

<div class="row">
    <div class="col-md-3">
        <div class="card my-4">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
            <div latest-products="" count="5"></div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row my-2">
            @foreach (Product prd in Model.Products)
            { 
                <partial name="_ProductCard" model="prd"/>
            }
        </div>
        <div page-model="@Model.Pagination" 
             page-action="Index"
             page-classes-enabled="true"
             page-class="btn"
             page-class-normal="btn-outline-primary"
             page-class-selected="selected-page"></div>

    </div>
</div>
